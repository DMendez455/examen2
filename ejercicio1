def contar_mayusculas_minusculas(texto):
  """
  Cuenta el número de letras mayúsculas y minúsculas de un texto ingresado.

  Args:
    texto: El texto a contar.

  Returns:
    Un diccionario con dos llaves, "mayusculas" y "minusculas", con los números de letras mayúsculas y minúsculas, respectivamente.
  """

  letras_mayusculas = 0
  letras_minusculas = 0

  for letra in texto:
    if letra.isupper():
      letras_mayusculas += 1
    else:
      letras_minusculas += 1

  return {"mayusculas": letras_mayusculas, "minusculas": letras_minusculas}


